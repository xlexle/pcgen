<div class="container-fluid">
  <div class="row count-area">
    <div class="col-sm-12 count">
      <span>{{count}} hakutulosta</span>
    </div>
  </div>

  <div class="row listings-area">

    {{#if model}}
      {{#each model as |item index|}}
        <div class="col-sm-6 col-md-4">
          <div class="product-container">
            <div class="row">
              {{products/tile-infobar index=index}}
            </div>

            <div class="row">
              {{#products/tile-heading brand=item.propertyList.brand name=item.propertyList.productName sku=item.propertyList.sku}}
                <span class="sub-text">{{item.formFactor}}</span>
                <span class="sub-text">{{item.efficiency}}</span>
              {{/products/tile-heading}}
            </div>

            <div class="row">
              {{#products/tile-specs specsUrl=item.propertyList.specsUrl}}
                <li class="list-group-item">{{as-watts item.amps12v}} +12V</li>
                <li class="list-group-item">{{item.pcieConnectors}} PCIe</li>
                <li class="list-group-item">{{item.sataQty}} x SATA</li>
                <li class="list-group-item">{{item.cables}} kaapelit</li>
                <li class="list-group-item">{{item.propertyList.warranty}} vuoden takuu</li>
              {{/products/tile-specs}}

              {{products/tile-prices pricesUrl=item.propertyList.pricesUrl sources=item.cheapestThreeSources}}
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}

  </div> <!-- listings-area -->
</div> <!-- container-fluid -->
